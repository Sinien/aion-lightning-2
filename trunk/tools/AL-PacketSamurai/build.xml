<?xml version="1.0" encoding="UTF-8"?>
<project name="AL_PacketSamurai" default="dist" basedir=".">
	<description>
        Description
    </description>
	<property name="src" location="src"/>
	<property name="lib" location="lib"/>
	<property name="build" location="build"/>
	<property name="build.classes" location="${build}/classes"/>
	<property name="build.dist" location="${build}/dist"/>
	<property name="splash" value="splash.png"/>
	<path id="classpath">
		<fileset dir="${lib}">
			<include name="jpcap.jar"/>
			<include name="javolution.jar"/>
			<include name="swingx-0.9.1.jar"/>
			<include name="dnsjava.jar"/>
			<include name="commons-codec-1.3.jar"/>
			<include name="commons-logging-1.1.jar"/>
			<include name="commons-httpclient-3.0.1.jar"/>
		</fileset>
	</path>
	<target name="init" description="Create the output directories.">
		<mkdir dir="${build}"/>
		<mkdir dir="${build.classes}"/>
		<mkdir dir="${build.dist}"/>
		<mkdir dir="${build.dist}/logs"/>
		<mkdir dir="${build.dist}/config"/>
		<mkdir dir="${build.dist}/libs"/>
		<mkdir dir="${build.dist}/protocols"/>
	</target>
	<target name="compile" depends="init" description="Compile the source.">
		<javac destdir="${build.classes}" optimize="on" debug="on" source="1.6" target="1.6" nowarn="off">
			<src path="${src}"/>
			<classpath refid="classpath"/>
		</javac>
		<copy todir="${build.classes}/com/aionlightning/packetsamurai/gui/images">
			<fileset dir="${src}/com/aionlightning/packetsamurai/gui/images">
				<include name="*.png"/>
			</fileset>
		</copy>
	</target>
	<target name="jar" depends="compile" description="Create the jar file">
		<jar destfile="${build.dist}/packetsamurai.jar">
			<fileset dir="${build.classes}"/>
			<fileset file="${src}/${splash}"/>
		</jar>
		<copy todir="${build.dist}/libs">
			<fileset dir="${src}/../lib">
				<include name="*.jar"/>
				<include name="*.dll"/>
			</fileset>
		</copy>
	</target>
	<target name="dist" depends="jar">
		<copy todir="${build.dist}">
			<fileset dir="${src}/../dist">
				<include name="*.*"/>
			</fileset>
		</copy>
		<copy todir="${build.dist}/protocols">
			<fileset dir="${src}/../dist/protocols">
				<include name="*.*"/>
			</fileset>
		</copy>
		<copy todir="${build.dist}/logs">
			<fileset dir="${src}/../dist/logs">
				<include name="*.*"/>
			</fileset>
		</copy>
		<copy todir="${build.dist}/data">
			<fileset dir="${src}/../dist/data">
				<include name="*.*"/>
			</fileset>
		</copy>
		<zip destfile="${build}/al_packetsamurai-dist.zip" basedir="${build.dist}"/>
	</target>
	<target name="clean" description="Remove the output directories">
		<delete dir="${build}"/>
	</target>
</project>
